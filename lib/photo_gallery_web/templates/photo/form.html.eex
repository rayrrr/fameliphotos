<%= form_for @changeset, @action, [multipart: true, as: :photos], fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :photos %>
  <%= file_input f, :photos, [multiple: :true] %>
  <%= error_tag f, :photos %>

  <div>
    <%= submit "Upload" %>
  </div>
<% end %>
